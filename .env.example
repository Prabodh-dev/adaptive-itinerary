NEXT_PUBLIC_API_URL=http://localhost:8080
PORT=8080
CORS_ORIGIN=http://localhost:3000

# Foursquare API Key (for place search)
# Get yours at: https://foursquare.com/developers/apps
FOURSQUARE_API_KEY=

# Mapbox Access Token (for route optimization)
# Get yours at: https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=

# Mapbox routing profile (optional, defaults to mapbox/driving)
# Options: mapbox/driving, mapbox/walking, mapbox/cycling, mapbox/driving-traffic
MAPBOX_DEFAULT_PROFILE=mapbox/driving

# OpenWeather API Key (for weather monitoring)
# Get yours at: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Weather polling interval in seconds (for worker)
WEATHER_POLL_INTERVAL_SEC=120

# BestTime API Key (PRIVATE) for real-time crowd monitoring
# Get yours at: https://besttime.app/api/v1/keys
# IMPORTANT: Use PRIVATE key (starts with "pri_"), not public key
BESTTIME_API_KEY_PRIVATE=

# Crowd polling interval in seconds (for worker)
CROWD_POLL_INTERVAL_SEC=300

# Maximum venues to poll for crowd data per trip (to avoid rate limits)
MAX_CROWD_VENUES_PER_TRIP=8

# Transitland API (for transit delays and alerts - single provider for all cities)
# Get your free API key at: https://www.transit.land/
TRANSITLAND_API_KEY=
TRANSITLAND_BASE_URL=https://transit.land/api/v2/rest

# Transit polling interval in seconds (for worker)
TRANSIT_POLL_INTERVAL_SEC=180

# Delay threshold in minutes - create suggestions when delays exceed this
TRANSIT_DELAY_THRESHOLD_MIN=10

# Transit stops search radius in meters
TRANSIT_STOPS_RADIUS_M=800

# Maximum number of stops to check per trip
TRANSIT_MAX_STOPS=3

# Look ahead time window for departures in seconds (1 hour = 3600)
TRANSIT_NEXT_SECONDS=3600
